<?xml version="1.0" encoding="ISO-8859-1"?>

<project>

	<extend>${basedir}/../../../project.xml</extend>

  	<name>shell</name>
  	<groupId>jadabs</groupId>
  	<id>jadabs-shell</id>

	<shortDescription>Command line shell for handling jadabs.</shortDescription>
	
	<properties>
		<osgi.bundle.category>service</osgi.bundle.category>
		<osgi.export.service>ch.ethz.iks.jadabs.shell.svc.IShellPluginService</osgi.export.service>
	</properties>
	
	
	
	<dependencies>
   
        <dependency>
            <groupId>osgi</groupId>
            <artifactId>framework</artifactId>
            <version>1.2</version>
        </dependency>
              
        <dependency>
            <groupId>jadabs</groupId>
            <artifactId>remotefw-api</artifactId>
            <version>${pom.currentVersion}</version>
        </dependency>
        
        <dependency>
            <groupId>jadabs</groupId>
            <artifactId>remotefw-impl</artifactId>
            <version>${pom.currentVersion}</version>
        </dependency>
            
        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
            <version>1.2.8-osgi</version>
        </dependency>
        
	</dependencies>  
	
</project>
