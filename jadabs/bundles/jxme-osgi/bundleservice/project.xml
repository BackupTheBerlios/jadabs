<?xml version="1.0" encoding="UTF-8"?>

<project>

	<extend>${basedir}/../../../project.xml</extend>

      <organization>
        <name>ETHZ-IKS</name>
        <url>http://www.iks.inf.ethz.ch</url>
        <logo>/images/logo_ethz_iks.jpg</logo>
      </organization>
      
	<groupId>jadabs</groupId>
	<artifactId>jxme-bundleservice</artifactId>
	<name>JXME Bundle Service</name>
	
	<shortDescription>JXME Bundle Service</shortDescription>

	<package>ch.ethz.jadabs.jxme</package>

	<properties>
		<!-- for normal osgi bundles -->
		<osgi.export.service>ch.ethz.jadabs.jxme.bundleservice.BundleService</osgi.export.service>
		<osgi.bundle.category>bundle-loader</osgi.bundle.category>
		
	</properties>

  	<dependencies>
  	
    	<dependency>
      		<groupId>osgi</groupId>
      		<artifactId>osgi-framework</artifactId>
      		<version>1.2</version>
		</dependency>

    	<dependency>
      		<groupId>jadabs</groupId>
      		<artifactId>log4j-cdc</artifactId>
      		<version>${pom.currentVersion}</version>
		</dependency>	
		
    	<dependency>
      		<groupId>jadabs</groupId>
      		<artifactId>jxme-osgi</artifactId>
      		<version>${pom.currentVersion}</version>
		</dependency>			
		
    	<dependency>
      		<groupId>jadabs</groupId>
      		<artifactId>jxme-services-api</artifactId>
      		<version>${pom.currentVersion}</version>
		</dependency>			
		
  	</dependencies>

  <reports>
  	<report>maven-javadoc-plugin</report>
  </reports>


</project>
