<?xml version="1.0" encoding="UTF-8"?>

<OSGiPlatform 
	id="ipaq1.wlab.ethz.ch"
	name="iPAQ1"
	version="0.1.0"
	description=""
	provider-name="ETHZ-IKS">
	
	<Device>
	    <Property name="processor" value="armv4l" />
	    <Property name="display" value="480x640" />
	    <Property name="os" value="linux" />
	</Device>
		
	<OSGiContainer>
	    <Property name="vm" value="sun-cvm" />
	    <Property name="vm-version" value="1.0.1" />
	    <Property name="sound" value="JMF-2.1.1e" />
	    <Property name="configuration" value="osgi-daop"/>
	    <Property name="configuration-version" value="1.3.0"/>
	</OSGiContainer>
	
	<NetworkInterfaces>
	    
	     <Interface 
	        type="wlan/managed" 
	        name="bt-hotspot"
	        iface="eth0"
	        ip="dhcp"
	        description="for ad-hoc communication (UDP)"
	     />
	     
	    <Interface 
	        type="wlan/adhoc" 
	        name="bt-hotspot"
	        iface="eth1"
	        ip="192.168.55.55"
	        description="for ad-hoc wireless"
	     />
<!--
	     <Interface 
	        type="bt/jsr-82" 
	        name="bt-hotspot"
	        iface="hci0"
	        description="for BT/JSR-82 Connections"
	     />
-->	     
	</NetworkInterfaces>
	
</OSGiPlatform>